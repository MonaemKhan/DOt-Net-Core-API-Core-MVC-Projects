@model EmployeeDetails.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="p-5">
    <h2>Employee Details</h2>
    <hr>
    <div class="d-flex ms-3 me-5 mt-3">
        <div class="col-md-6 me-4">

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <p>Name</p>
                </div>
                <div class="col-md-9">
                    <p>@Model.Name</p>
                </div>
            </div>

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <p>Gender </p>
                </div>
                <div class="col-md-9">
                    <p>Model.Gender</p>
                </div>
            </div>

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <label class="form-label me-5">Education </label>
                </div>
                <div class="col-md-9 d-flex justify-content-between">
                    <div class="form-check">
                        SSC @Model.SSC
                    </div>
                    <div class="form-check">
                        HSC @Model.HSC
                    </div>
                    <div class="form-check">
                        BSC @Model.BSC
                    </div>
                    <div class="form-check">
                        MSC @Model.MSC
                    </div>
                </div>
            </div>

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <p>Address </p>
                </div>
                <div class="col-md-9">
                    <p>@Model.Address</p>
                </div>
            </div>

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <p>Country</p>
                </div>
                <div class="col-md-9">
                    <p>@Model.Employee_country.CountryName</p>
                </div>
            </div>

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <p>State</p>
                </div>
                <div class="col-md-9">
                    <p>@Model.Employee_State.StateName</p>
                </div>
            </div>

            <div class="d-flex mb-4 align-items-center">
                <div class="col-md-3">
                    <p>City</p>
                </div>
                <div class="col-md-9">
                    <p>@Model.Employee_City.CityName</p>
                </div>
            </div>
        </div>

        @if (Model.ImageName == null)
        {
            <div class="d-flex mb-4 align-items-center justify-content-center">
                <img decoding="async" src="@("~/images/default_user.png")" asp-append-version="true" alt="default user"
                     style="border: 2px solid lightblue;border-radius: 10px; height:400px;width:400px" id="UploadFile">
            </div>
        }
        else
        {
            <div class="d-flex mb-4 align-items-center justify-content-center">
                <img decoding="async" src="@("~/UserImages/"+(Model.ImageName))" asp-append-version="true" alt="default user"
                     style="border: 2px solid lightblue;border-radius: 10px; height:400px;width:400px" id="UploadFile">
            </div>
        }
    </div>

    <div class="d-flex">
        <div class="me-2">
            <a asp-action="Index" class="btn btn-outline-primary">Back to Index</a>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-outline-primary">Edit</a>
        </div>
    </div>
</div>
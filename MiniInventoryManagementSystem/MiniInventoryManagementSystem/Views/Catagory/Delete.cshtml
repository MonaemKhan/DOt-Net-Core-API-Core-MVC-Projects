@model MiniInventoryManagementSystem.Models.Catagory
@{
    ViewData["Title"] = "Delete " + Model.CatagoryName;
}

<style>
    .card {
        border-radius: 10px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
</style>

<div class="card pt-5">
    <h3 class="ms-5">Are you sure? you want to delete @Model.CatagoryName Catagory?</h3>
    <div class="ms-5 mb-3">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CatagoryId)
            </dt>:
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CatagoryId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CatagoryName)
            </dt>:
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CatagoryName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CatagoryId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <div class="ms-2">
        <a asp-action="Index" class="text-decoration-none"><i class="bi bi-caret-left-square fs-6"></i>Back To Catagory List</a>
    </div>
</div>

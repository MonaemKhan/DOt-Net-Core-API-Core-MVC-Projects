@model IEnumerable<MiniInventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "View Product";
}

<link rel="stylesheet" href=@Url.Content("~/DataTablePrint/datatableprint.css")>
<link rel="stylesheet" href=@Url.Content("~/DataTablePrint/datatableprint_jQuery.css")>
<style>
    .addCatagory {
        text-align: right;
    }

        .addCatagory a {
            border-radius: 10px;
        }
</style>

<div class="p-4 pb-1">
    <h1 class="text-center">View Sales Details</h1>
    <div class="row mt-3 mb-4">
        <table id="CustomDataTable" class="table table-hover" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>
                        SN
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product_Catagory)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        @{
                            i++;
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product_Catagory.CatagoryName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square text-danger fs-5"></i></a> ||
                            @*<a asp-action="Details" asp-route-id="@item.ProductId"><i class="bi bi-person-vcard text-danger fs-5"></i></a> |*@
                            <a asp-action="Delete" asp-route-id="@item.ProductId"><i class="bi bi-trash text-danger fs-5"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="addCatagory me-1">
        <a asp-action="Create" class="btn btn-primary fs-5">Add New Product</a>
    </p>
</div>

@section Scripts {
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery.js")></script>
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery2.js")></script>
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery3.js")></script>
    <script src=@Url.Content("~/DataTablePrint/Datatable_JQuery4.js")></script>
    <script>
        $(document).ready(function () {
            $('#CustomDataTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'print'
                ],
            });
        });
    </script>
}

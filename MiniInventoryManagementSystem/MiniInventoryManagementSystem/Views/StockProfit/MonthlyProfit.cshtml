@model IEnumerable<MiniInventoryManagementSystem.Models.SupportClass.Profit>

@{
    string date = DateTime.Now.ToString("dd-MM-yyyy");
    string[] month = { "January", "February", "March", "April", "May", "June", "July", "Auguest", "September", "October", "November", "December" };
    int mon = Convert.ToInt32(date.Substring(3, 2));
    string monthName = month[mon - 1];
    string year = date.Substring(6, 4);
    ViewData["Title"] = $"Profit of {@monthName}, {@year}";
}

<link rel="stylesheet" href=@Url.Content("~/DataTablePrint/datatableprint.css")>
<link rel="stylesheet" href=@Url.Content("~/DataTablePrint/datatableprint_jQuery.css")>

<div class="p-4 pb-1">
    <h1 class="text-center">Profit of @monthName, @year</h1>
    <div class="row mt-3 mb-4">
        <table id="CustomDataTable" class="table table-hover text-center" style="width:100%">
            <thead class="thead-dark">
                <tr>
                    <th>SN</th>
                    <th>
                        @Html.DisplayNameFor(model => model.CatagoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalSaleDetailsQuentity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParchesDetailsTotalPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalesDetailsTotalPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Net_Profit)
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        @{
                            i++;
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.CatagoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalSaleDetailsQuentity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParchesDetailsTotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesDetailsTotalPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Net_Profit)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery.js")></script>
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery2.js")></script>
    <script src=@Url.Content("~/DataTablePrint/DataTable_JQuery3.js")></script>
    <script src=@Url.Content("~/DataTablePrint/Datatable_JQuery4.js")></script>
    <script>
        $(document).ready(function () {
            $('#CustomDataTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'print'
                ],
            });
        });
    </script>
}
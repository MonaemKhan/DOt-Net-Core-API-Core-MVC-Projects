                @Html.DisplayNameFor(model => model.SalesDate)
            </dt>:
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SalesDate)
            </dd>            
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SalesDetailsId" />
            <input type="hidden" asp-for="SalesId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <div class="ms-2">
        <a asp-action="Index" class="text-decoration-none"><i class="bi bi-caret-left-square fs-6"></i>Back To Sales Details</a>
    </div>
</div>
